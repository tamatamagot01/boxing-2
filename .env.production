# Environment Variables for Production Deployment

# Database (PostgreSQL in Docker)
POSTGRES_USER=boxing_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=boxing
POSTGRES_PORT=5432

# Application
APP_PORT=3000

# Database Connection URL (used by Prisma)
DATABASE_URL=postgresql://boxing_user:your_secure_password_here@postgres:5432/boxing

# NextAuth Configuration
AUTH_SECRET=your_auth_secret_here_min_32_chars
NEXTAUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true

# Google OAuth
GOOGLE_AUTH_CLIENT_ID=your_google_client_id
GOOGLE_AUTH_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth
GITHUB_AUTH_CLIENT_ID=your_github_client_id
GITHUB_AUTH_CLIENT_SECRET=your_github_client_secret

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key
OWNER_EMAIL=your_email@example.com
